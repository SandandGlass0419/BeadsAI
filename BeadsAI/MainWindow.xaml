<Window x:Class="BeadsAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeadsAI"
        xmlns:uc="clr-namespace:BeadsAI.UserControls"
        mc:Ignorable="d"
        Title="BeadsAI" Height="860" Width="1400" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <uc:ToolBarControl Grid.Row="0"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>

                <uc:InputSelectControl Grid.Row="0"/>

                <uc:NetworkRunControl Grid.Row="1"/>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="191*"/>
                </Grid.RowDefinitions>

                <uc:BraceletDisplayControl Grid.Row="0"/>

                <UniformGrid Columns="2" Rows="2" Grid.Row="1">
                    <uc:OutputDisplayControl Tag="0"/>
                    <uc:OutputDisplayControl Tag="1"/>
                    <uc:OutputDisplayControl Tag="2"/>
                    <uc:OutputDisplayControl Tag="3"/>
                </UniformGrid>
            </Grid>
        </Grid>

    </Grid>
</Window>
