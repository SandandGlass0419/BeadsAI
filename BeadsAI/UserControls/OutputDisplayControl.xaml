<UserControl x:Class="BeadsAI.UserControls.OutputDisplayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeadsAI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="620">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding ThisImgPath, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Bottom" Stretch="Uniform" Margin="35,10,10,10"/>
                <TextBlock Text="{Binding FormatedOutput, UpdateSourceTrigger=PropertyChanged}" FontSize="35" VerticalAlignment="Bottom" Margin="10"/>
            </StackPanel>
        </Grid>

        <ProgressBar Grid.Row="1" Margin="35,25,35,45" Value="{Binding OutputPercent, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</UserControl>
