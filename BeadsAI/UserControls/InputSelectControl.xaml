<UserControl x:Class="BeadsAI.UserControls.InputSelectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeadsAI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300">
    <Grid>
        <TabControl Margin="5" Background="GhostWhite">
            <TabItem Header="Manual">
                <ComboBox Width="150" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"
                          ItemsSource="{Binding StrInputs}"
                          SelectedItem="{Binding Input}"/>
            </TabItem>

            <TabItem Header="Camera">

            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
