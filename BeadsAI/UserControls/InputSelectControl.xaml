<UserControl x:Class="BeadsAI.UserControls.InputSelectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeadsAI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="300">
    <Grid>
        <TabControl Margin="5" Background="GhostWhite">
            <TabItem Header="Camera">
                <StackPanel>
                    <Image x:Name="CameraFeed" Stretch="Uniform" Margin="10"
                           Source="{Binding WBitmap, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button x:Name="btn_Cam" Content="Camera (Off)" Width="100" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10"
                            Click="btn_Camera_Click"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="Manual">
                <StackPanel>
                    <Image Source="{Binding ImagePath, UpdateSourceTrigger=PropertyChanged}" Stretch="Uniform" Margin="10"/>

                    <ComboBox Width="150" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0"
                        ItemsSource="{Binding StrInputs}"
                        SelectedItem="{Binding StrInput}"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
