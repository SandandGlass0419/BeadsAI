<UserControl x:Class="BeadsAI.UserControls.NetworkRunControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeadsAI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid Margin="5">
        <Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1">
            <Grid>
                <TextBlock FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"
                       Text="{Binding InputFormated, UpdateSourceTrigger=PropertyChanged}"/>
                
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="btn_ReRun" Content="Re-run Test" Width="80" Height="25" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5"
                        Click="btn_ReRun_Click"/>
                    <Button x:Name="btn_Run" Content="Run" Width="80" Height="25" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5"
                        Click="btn_Run_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
