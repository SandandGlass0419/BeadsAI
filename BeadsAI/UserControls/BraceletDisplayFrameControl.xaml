<UserControl x:Class="BeadsAI.UserControls.BraceletDisplayFrameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeadsAI.UserControls"
             xmlns:uc="clr-namespace:BeadsAI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="170" d:DesignWidth="1920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="tb_BestScore" Text="BestScore: 0" FontSize="30" Margin="5" VerticalAlignment="Center"/>

        <uc:BraceletDisplayControl Grid.Row="1"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Content="Repeat" Width="70" Height="30" FontSize="15" Margin="5" VerticalAlignment="Center"
                    Click="Btn_Repeat_Click"/>

            <TextBox Width="50" Height="30" Margin="5" VerticalAlignment="Center" FontSize="20"
                     Text="{Binding BtnCopyStart, UpdateSourceTrigger=LostFocus}"/>
            <TextBlock Text=" ~ " FontSize="20" VerticalAlignment="Center"/>
            <TextBox Width="50" Height="30" Margin="5" VerticalAlignment="Center" FontSize="20"
                     Text="{Binding BtnCopyEnd, UpdateSourceTrigger=LostFocus}"/>

            <TextBlock Text=" from " FontSize="20" VerticalAlignment="Center"/>
            <TextBox Width="50" Height="30" Margin="5" VerticalAlignment="Center" FontSize="20"
                     Text="{Binding BtnPasteStart, UpdateSourceTrigger=LostFocus}"/>
            <TextBlock Text=" to " FontSize="20" VerticalAlignment="Center"/>
            <TextBox Width="50" Height="30" Margin="5" VerticalAlignment="Center" FontSize="20"
                     Text="{Binding BtnPasteEnd, UpdateSourceTrigger=LostFocus}"/>
        </StackPanel>
    </Grid>
</UserControl>
