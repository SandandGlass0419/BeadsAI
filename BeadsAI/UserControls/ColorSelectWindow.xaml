<Window x:Class="BeadsAI.UserControls.ColorSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeadsAI.UserControls"
        mc:Ignorable="d"
        Title="" Height="150" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <ComboBox Grid.Row="0" x:Name="ColorSelector" Width="150" Height="20" FontSize="12"
                  ItemsSource="{Binding ColorList}"/>

        <Button Grid.Row="1" Content="OK" Width="80" Height="20"
                Click="OK_btn_Click"/>
    </Grid>
</Window>
