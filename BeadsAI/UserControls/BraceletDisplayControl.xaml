<UserControl x:Class="BeadsAI.UserControls.BraceletDisplayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeadsAI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="1920">

    <Grid>
        <ScrollViewer Height="70" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto">
            <StackPanel x:Name="BraceletDisplay" Height="40" Margin="5" VerticalAlignment="Top" Orientation="Horizontal"/>
        </ScrollViewer>
    </Grid>
</UserControl>
